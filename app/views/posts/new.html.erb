<%= provide(:title, "Create post") %>

<% if @post.errors.full_messages.any? %>
  <% @post.errors.full_messages.each do |msg_type, msg| %>
    <div><%= msg %></div>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>

  <%= f.submit "Create Post" %>
<% end %>
